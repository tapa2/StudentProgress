<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="studProgApp.MainPage"
             Title=""
             BackgroundColor="#060606">

    <Grid Padding="10">
        <!-- Контейнер для кнопок у верхньому лівому кутку -->
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" VerticalOptions="Start">

            <!-- Кнопка "Інформація" -->
            <Button 
                Text="Інформація"
                x:Name="InfoButton"
                Clicked="OnInfoButtonClicked"
                Margin="5"
                BackgroundColor="LightGrey"/>

            <!-- Кнопка "Обрати файл" -->
            <Button 
                Text="Обрати файл"
                x:Name="SelectFileButton"
                Clicked="OnSelectFileButtonClicked"
                Margin="5"
                BackgroundColor="LightGrey"/>

            <!-- Кнопка "Обрати файл" -->
            <Button 
                Text="Вийти з програми"
                x:Name="QuitButton"
                Clicked="OnQuitButtonClicked"
                Margin="5"
                BackgroundColor="LightGrey"/>

        </StackLayout>
    </Grid>
</ContentPage>

